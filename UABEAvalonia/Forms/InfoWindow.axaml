<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UABEAvalonia"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="500"
        Width="1100" Height="500"
        Icon="/Assets/uabeavalonia16.ico"
        x:Class="UABEAvalonia.InfoWindow"
        Title="Assets Info"
        WindowStartupLocation="CenterOwner">
  <Window.Resources>
    <local:AssetTypeIconConverter x:Key="AssetTypeIconConverter" />
  </Window.Resources>
  <Grid>
    <Menu Height="22" VerticalAlignment="Top">
      <MenuItem Header="文件">
        <MenuItem Header="添加" HotKey="Ctrl+N" InputGesture="Ctrl+N" Name="menuAdd" />
        <MenuItem Header="保存" HotKey="Ctrl+S" InputGesture="Ctrl+S" Name="menuSave" />
        <MenuItem Header="另存为..." HotKey="Ctrl+Shift+S" InputGesture="Ctrl+Shift+S" Name="menuSaveAs" />
        <MenuItem Header="模组制作工具">
          <MenuItem Header="创建包文件" Name="menuCreatePackageFile" />
        </MenuItem>
        <MenuItem Header="关闭" HotKey="Ctrl+W" InputGesture="Ctrl+W" Name="menuClose" />
      </MenuItem>
      <MenuItem Header="视图">
        <MenuItem Header="名称查找" HotKey="Ctrl+F" InputGesture="Ctrl+F" Name="menuSearchByName" />
        <MenuItem Header="继续搜索" InputGesture="F3" Name="menuContinueSearch" />
        <MenuItem Header="转到资源" HotKey="Ctrl+G" InputGesture="Ctrl+G" Name="menuGoToAsset" />
        <MenuItem Header="过滤器" HotKey="Ctrl+E" InputGesture="Ctrl+E" Name="menuFilter" />
      </MenuItem>
      <MenuItem Header="工具">
        <MenuItem Header="信息" HotKey="F4" InputGesture="F4" Name="menuInfo" />
        <MenuItem Header="类型数" HotKey="F5" InputGesture="F5" Name="menuTypeTree" />
        <MenuItem Header="依赖" HotKey="F6" InputGesture="F6" Name="menuDependencies" />
        <MenuItem Header="脚本" HotKey="F7" InputGesture="F7" Name="menuScripts" />
        <MenuItem Header="场景层级" HotKey="F8" InputGesture="F8" Name="menuHierarchy" />
      </MenuItem>

		<MenuItem Header="自定义工具">
			<MenuItem Header="导出monobehaviour"  Name="exportMonoBehaviour" />
			<MenuItem Header="导入monobehaviour"  Name="importMonoBehaviour" />
		</MenuItem>
    </Menu>
    <TextBlock Margin="10,32,10,0" VerticalAlignment="Top" Text="Assets" />
    <Border Margin="10,53,200,10" BorderBrush="Black" BorderThickness="1">
      <DataGrid AutoGenerateColumns="False" CanUserResizeColumns="True" IsReadOnly="True" Name="dataGrid">
        <DataGrid.RowTheme>
          <ControlTheme TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
            <ControlTheme.Children>
              <Style Selector="^:nth-child(2n)">
                <Setter Property="Background" Value="#00FFFFFF" />
              </Style>
            </ControlTheme.Children>
          </ControlTheme>
        </DataGrid.RowTheme>
        <DataGrid.Columns>
          <DataGridTemplateColumn Header=" ">
            <DataGridTemplateColumn.CellTemplate>
              <DataTemplate>
                <Image Source="{Binding TypeClass, Converter={StaticResource AssetTypeIconConverter}}" Width="16" Height="16" />
              </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
          </DataGridTemplateColumn>
          <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
          <DataGridTextColumn Header="Container" Binding="{Binding Container}"/>
          <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
          <DataGridTextColumn Header="File ID" Binding="{Binding FileID}"/>
          <DataGridTextColumn Header="Path ID" Binding="{Binding PathID}"/>
          <DataGridTextColumn Header="Size" Binding="{Binding Size}"/>
          <DataGridTextColumn Header="Modified" Binding="{Binding Modified}"/>
        </DataGrid.Columns>
      </DataGrid>
    </Border>
    <StackPanel Margin="0,53,10,10" HorizontalAlignment="Right" Width="185">
      <Label Content="Name"/>
      <TextBox TextWrapping="WrapWithOverflow" Text="" IsReadOnly="True" Name="boxName" />
      <Label Content="Path ID"/>
      <TextBox TextWrapping="WrapWithOverflow" Text="" IsReadOnly="True" Name="boxPathId" />
      <Label Content="File ID"/>
      <TextBox TextWrapping="WrapWithOverflow" Text="" IsReadOnly="True" Name="boxFileId" />
      <Label Content="Type"/>
      <TextBox TextWrapping="WrapWithOverflow" Text="" IsReadOnly="True" Name="boxType" />
      <UniformGrid Columns="2"  >
        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="View Data" Name="btnViewData" Margin="5"/>
        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="View Scene" Name="btnSceneView" Margin="5"/>

        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Import Raw" Name="btnImportRaw" Margin="5"/>
        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Export Raw" Name="btnExportRaw" Margin="5"/>

        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Import Dump" Name="btnImportDump" Margin="5"/>
        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Export Dump" Name="btnExportDump" Margin="5"/>

        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Edit Data" Name="btnEditData" Margin="5"/>
        <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Remove" Name="btnRemove" Margin="5"/>
      </UniformGrid>
      <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Content="Plugins" Name="btnPlugin" Margin="5"/>

    </StackPanel>
  </Grid>
</Window>
